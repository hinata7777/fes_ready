<div class="inline-flex rounded-xl bg-white p-1 shadow-md">
  <% tab_items.each do |key, label| %>
    <% active = key == active_tab_key %>
    <% classes = [ "rounded-lg px-4 py-2 text-sm font-semibold transition",
                   (active ? "bg-rose-500 text-white shadow-sm" : "text-slate-500 hover:text-rose-500") ].join(" ") %>
    <%= link_to(label, url_for_key(key), class: classes) %>
  <% end %>
</div>
