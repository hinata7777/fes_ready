<% if resource.errors.any? %>
  <div class="mb-4 rounded-xl border border-rose-300 bg-rose-50 px-4 py-3">
    <p class="mb-2 text-sm font-bold text-rose-700">
      入力内容に誤りがあります（<%= resource.errors.count %>件）
    </p>
    <ul class="list-disc pl-5 text-sm text-rose-700">
      <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>