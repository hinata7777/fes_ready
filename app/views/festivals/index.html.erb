<div class="min-h-screen px-4 py-6">
  <div class="mx-auto max-w-5xl space-y-6">
    <header class="space-y-4">
      <h1 class="text-2xl font-bold text-slate-900">
        <%= @artist ? "#{@artist.name} の出演フェス" : "フェスを選択" %>
      </h1>
      <% preserved_query = request.query_parameters.except(:page, :status) %>
      <div class="flex justify-center">
        <%= render Shared::SegmentedTabsComponent.new(
              tabs: @status_labels,
              active_tab_key: @status,
              url_builder: ->(key) do
                path_options = preserved_query.merge(status: key)
                @artist ? artist_festivals_path(@artist, path_options) : festivals_path(path_options)
              end
            ) %>
      </div>
    </header>

    <% search_url = @artist ? artist_festivals_path(@artist) : festivals_path %>
    <%= render Shared::SearchFormComponent.new(
               query: @q,
               url: search_url,
               placeholder: "フェス名を入力",
               status: @status
             ) %>

    <section class="grid gap-3 md:grid-cols-2 md:gap-4">
      <% if @festivals.any? %>
        <% @festivals.each do |festival| %>
          <div class="w-full">
            <% festival_url =
               if @artist
                 festival_path(festival, from: "artist_festivals", artist_id: @artist.to_param)
               else
                 festival_path(festival)
               end %>
            <%= render "shared/nav_stack_button",
                       label: festival.name,
                       url: festival_url %>
          </div>
        <% end %>
      <% else %>
        <p class="rounded-xl bg-white px-4 py-12 text-center text-sm text-slate-500 shadow md:col-span-2">
          表示できるフェスがありません
        </p>
      <% end %>
    </section>
  </div>
  <%= render "shared/pagination", pagy: @pagy %>
</div>
