<section class="rounded-3xl border border-slate-200 bg-white px-5 py-4 shadow-sm">
  <h2 class="text-base font-bold text-slate-900">当日の <%= forecast.venue_name %> の天気予報</h2>
  <div class="mt-3 overflow-x-auto">
    <div class="w-full max-w-full rounded-2xl border-2 border-slate-300 bg-white p-2 sm:p-3">
      <%# 上段は 8〜22時のラベル表示（2時間刻み） %>
      <div class="grid grid-cols-8 text-center text-sm font-bold text-slate-900 sm:text-lg">
        <% forecast.hour_labels.each do |h| %>
          <div><%= h %></div>
        <% end %>
      </div>

      <%# 下段は 2時間ごとの天気（8,10,12,14,16,18,20,22）を横並び表示 %>
      <div class="mt-2 grid grid-cols-8 gap-1 sm:gap-2">
        <% forecast.slots.each do |slot| %>
          <div class="flex flex-col items-center justify-center gap-1 rounded-xl <%= slot.tile_class %> p-2 text-white sm:p-3">
            <%= icon(slot.icon_name, class_name: "h-6 w-6 sm:h-9 sm:w-9") %>
            <div class="text-[10px] font-bold sm:text-xs"><%= slot.temperature_label %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
